import java.util.*;
public class lfs
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    int n=sc.nextInt();
	    for(int i=0;i<=n/4;i++)
	    {
	        int f,s;
	        f=i*4;
	        s=n-f;
	        if(s%7==0)
	        {
	            for(int j=0;j<i;j++)
	            {
	                System.out.print("4");
	            }
	            s=s/7;
	            for(int j=0;j<s;j++)
	            {
	                System.out.print("7");
	                
	            }
	          System.exit(0);  
	        }
	       
	         
	    }
	      System.out.print("-1");
	}
}
		

import java.util.*;
public class lfs
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        for(int row=-n;row<=n;row++)
        {
            int r=Math.abs(row);
            int top=n-r;
            for(int i=0;i<r;i++)
            {
                System.out.print("  ");
            }
            for(int i=0;i<top;i++)
            {
                System.out.print(i+" ");
            }
            for(int i=top;i>0;i--)
            {
                System.out.print(i+" ");
            }
            System.out.println(0);
        }
    }
}

import java.util.*;
public class lfs
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int m=sc.nextInt();
        int x=-1;
        if(n<m)
        {
            System.out.println(x);
        }
        else
        {
            if(n%2==0)
            {
                x=n/2;
            }
            else
            {
                x=n/2+1;
            }
            while(x%m!=0)
            {
                x++;
            }
            System.out.println(x);
        }
    }
}

import java.util.*;
public class lfs
{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
       
        while(t-->0)
        {
            int a=sc.nextInt();
            int b=sc.nextInt();
            int n=sc.nextInt();
             int c=0;
        int sum=0;
            while(sum<=n)
            {
                if(a>b)
                {
                    b+=a;
                    sum=b;
                    c=c+1;
                }
                else
                {
                    a+=b;
                    sum=a;
                    c=c+1;
                }
            }
            System.out.println(c);
            
            
            
        }
    }
}

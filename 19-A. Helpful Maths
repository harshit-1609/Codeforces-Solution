import java.util.*;
public class lfs
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        String s=sc.nextLine();
        s=s.replace("+","");
        char arr[]=s.toCharArray();
        Arrays.sort(arr);
        for(int i=0;i<arr.length;i++)
        {
            if(i==0)
            {
                System.out.print(arr[i]);
            }
            else
            {
                System.out.print("+"+arr[i]);
            }
        }
    }
}

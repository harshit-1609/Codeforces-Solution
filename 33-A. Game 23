import java.util.*;
public class lfs
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int m=sc.nextInt();
        int c=-1;
        if(m%n==0)
        {
            c=0;
            int d=m/n;
            while(d%2==0)
            {
                d=d/2;
                c+=1;
            }
            while(d%3==0)
            {
                d=d/3;
                c+=1;
            }
            if(d!=1)
            {
                c=-1;
            }
        }
        System.out.println(c);
    }
}

import java.util.*;
 public class lfs
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        String s=sc.next();
        String p="";
        boolean f=false;
        for(int i=0;i<n-1;i++)
        {
            if(s.charAt(i)!=s.charAt(i+1))
            {
                f=true;
                p=p+s.charAt(i);
                p=p+s.charAt(i+1);
                break;
            }
        }
            if(f==true)
            {
                System.out.println("YES");
                System.out.println(p);
            }
            else
            {
                 System.out.println("NO");
                
            }
            
        }
    }
